{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.js",
    "../core/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src"
  ],
  "types": ["node"]
}
