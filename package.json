{
  "name": "web3-api",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "description": "thirdweb's web3-api server",
  "main": "src/index.ts",
  "author": "Farhan Khwaja <farhan@thirdweb.com>",
  "type": "module",
  "scripts": {
    "dev": "yarn dev:infra & yarn dev:server & yarn dev:worker",
    "dev:server": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --files src/index.ts",
    "dev:worker": "nodemon --watch 'worker/**/*.ts' --exec 'ts-node' --files worker/index.ts",
    "dev:infra": "docker compose -f ./docker-compose-infra.yml --env-file ./.env up",
    "build": "yarn build:server && yarn build:worker",
    "build:server": "yarn install && tsc -p ./tsconfig.json --outDir dist && cp package.json dist/package.json && cd dist && yarn install --production",
    "build:worker": " yarn --cwd ./worker install && tsc -p ./worker/tsconfig.json --outDir worker/dist",
    "run": "yarn run:server && yarn run:worker",
    "run:server": "node ./dist/index.js",
    "run:worker": "node ./worker/dist/index.js",
    "docker-build-run": "docker compose build --no-cache && docker compose --env-file ./.env up --remove-orphans",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.1",
    "@fastify/express": "^2.3.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.8.1",
    "@fastify/type-provider-typebox": "^3.0.0",
    "@sinclair/typebox": "^0.28",
    "@thirdweb-dev/chains": "^0.1.18",
    "@thirdweb-dev/sdk": "^3.10.18-nightly-98efd090-20230524213053",
    "@thirdweb-dev/wallets": "^0.2.22",
    "@types/express": "^4.17.17",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.1",
    "body-parser": "^1.20.2",
    "cookie": "^0.5.0",
    "dotenv": "^16.0.3",
    "ethers": "5",
    "express": "^4.18.2",
    "fastify": "^4.15.0",
    "fastify-plugin": "^4.5.0",
    "http-status-codes": "^2.2.0",
    "knex": "^2.4.2",
    "pg": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@swc/core": "^1.3.41",
    "@types/cookie": "^0.5.1",
    "@types/node": "^18.15.4",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md}": "prettier --write"
  }
}
