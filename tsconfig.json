{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.d.ts",
    "server/**/*.js",
    "core/**/*.ts",
    "worker/**/*.ts",
    "worker/**/*.d.ts",
    "worker/**/*.js",
    "core/env.ts",
    "src/**/*.*"
  ],
  "exclude": ["node_modules"]
}
